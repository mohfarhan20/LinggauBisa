<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        >

        <TextView
            android:id="@+id/selamatDatang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Selamat Datang di"
            android:textColor="@color/Judul"/>

        <TextView
            android:id="@+id/kotaLinggau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/selamatDatang"
            android:text="Kota Lubuk Linggau"
            android:gravity="center"
            android:fontFamily="@font/poppins_reguler"
            android:textColor="@color/SubJudul"
              />

        <TextView
            android:id="@+id/Ayo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kotaLinggau"
            android:text="Ayo Ngelong Ke LUBUKLINGGAU"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:textColor="@color/base"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Ayo"
            android:layout_centerHorizontal="true"
            android:text="Lanjakke"
            android:fontFamily="@font/poppins_medium"
            android:onClick="go_menu"
            />

        <TextView
            android:id="@+id/sponsor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button"
            android:text="Sponsored By"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:textColor="@color/SubJudul"
            />

<!--        <ImageView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/gambar"-->
<!--            android:layout_below="@id/button"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:src="drawable/logo_lubuklinggau.png"-->
<!--            />-->
    </RelativeLayout>

</RelativeLayout>