<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/selamatDatang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Selamat Datang di"
            android:textColor="@color/Judul" />

        <TextView
            android:id="@+id/kotaLinggau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/selamatDatang"
            android:fontFamily="@font/poppins_reguler"
            android:gravity="center"
            android:text="Kota Lubuk Linggau"
            android:textColor="@color/SubJudul" />

        <TextView
            android:id="@+id/Ayo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/kotaLinggau"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Ayo Ngelong Ke LUBUKLINGGAU"
            android:textColor="@color/base" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Ayo"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_medium"
            android:onClick="go_menu"
            android:text="Lanjakke" />

        <TextView
            android:id="@+id/sponsor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Sponsored By"
            android:textColor="@color/SubJudul" />

        <ImageView
            android:id="@+id/gambar"
            android:layout_width="190dp"
            android:layout_height="189dp"
            android:layout_below="@id/button"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="110dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="110dp"
            android:src="@drawable/logo_lubuklinggau" />
    </RelativeLayout>

</RelativeLayout>